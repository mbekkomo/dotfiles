#!/usr/bin/env bash

otp=false

while getopts "o" x; do
  case $x in
    o) otp=true;;
    *) exit 1;; # opts are handled by getopts
  esac
done

if "$otp"; then
  pass=(pass otp -c)
  regex="^otp:.+"
  prompt="OTP"
else
  pass=(pass -c)
  regex="^[^o][^t][^p][^:].+"
  prompt="Password"
fi

store=$(
  fd --regex "$regex" ~/.local/share/password-store -e gpg --format '{.}' |
    sd ~/.local/share/password-store/ '' | {
      "$otp" && sd otp: ''
      ! "$otp" && cat
    } | wofi -d -p "$prompt" -l top -H 15% -x 5
)

[[ -n "$store" ]] || exit 1

if "$otp"; then
  : "$(basename "$store")"
  : "$(dirname "$store")/otp:$_"
  store="$_"
fi

exec "${pass[@]}" "$store"
